<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EventIt</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
</head>

<body class="d-flex flex-column vh-100 bglogin">
    <%- include("partials/navbar")%>
        <div class="container-fluid bglogin">
            <%- include("partials/flash") %>
                <!-- Button trigger modal -->
                <i data-bs-toggle="modal" data-bs-target="#exampleModal" class="fa fa-user-circle-o" id="profile"
                    style="position: absolute;right:1;top:120px;;font-size:48px"></i>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <b class="modal-title is-size-3" id="exampleModalLabel">User : <%=
                                        currentUser.username||currentUser.displayName %>
                                </b>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="card d-flex">
                                    <div>
                                        <% if(currentUser.photos){%>
                                            <img src="<%= currentUser.photos[0].value %> "
                                                style="border-radius: 50%;height:200px;width: 200px;"
                                                class="card-img-top" alt="...">
                                            <% } %>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title is-size-4">Profile</h5>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">
                                            <b>Username:</b>
                                            <%= currentUser.username||currentUser.displayName %>
                                        </li>
                                        <li class="list-group-item d-flex align-items-center">
                                            <label for="form-label"><b>UserID:</b></label>
                                            <input type="text" class="form-control" id="myInput" style="border: none;"
                                                value="<%= currentUser._id %> " required>
                                            <button class="btn" data-bs-toggle="tooltip" data-bs-placement="top"
                                                title="Copy to Clipboard" onclick="copyid()"><svg
                                                    xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                    fill="currentColor" class="bi bi-clipboard" viewBox="0 0 16 16">
                                                    <path
                                                        d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z" />
                                                    <path
                                                        d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z" />
                                                </svg></button>
                                        </li>
                                        <li class="list-group-item"><b>email:</b>
                                            <%= currentUser.email||currentUser.emails[0].value %>
                                        </li>
                                    </ul>
                                    <div class="card-body">
                                        <a href="#" class="card-link">Card link</a>
                                        <a href="#" class="card-link">Another link</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <% for(let post of posts){ %>
                    <div class="container">
                        <div class="col-md-7 offset-md-3 events">
                            <div class="card mb-2 mt-2 p-1" style="background-color: black;">
                                <p class="text-white-50 is-size-7">Posted By : <%=
                                        post.author.username||post.author.displayName%>
                                </p>
                                <h1 class="text-white-50" style="font-size:x-large;font-weight: 500;">
                                    <%=post.title%>
                                </h1>
                                <p class="ml-3 text-white-50 text">
                                    <%= post.description%>
                                </p>
                                <% if(post.images[0]){ %>
                                    <img src="<%= post.images[0].url %> " class="card-img-top" alt="post">
                                    <% } %>
                                        <a href="/events/<%= post._id %> "
                                            class="text-white-50 small mb-0 ml-3">View</a>

                            </div>
                        </div>
                    </div>
                    <% } %>
        </div>
        </div>
        <%- include("partials/sidediv") %>
            <footer class="footer bg-dark p-0">
                <div class="container">
                    <span class="text-white">
                        <p class="text-center">&copy EventIt</p><br><br>
                    </span>
                </div>
            </footer>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
                crossorigin="anonymous"></script>
            <script src="/javascript/javascript.js"></script>
</body>

</html>