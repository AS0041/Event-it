<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EventIt</title>
    <link <link
        href="data:image/x-icon;base64,"
        rel="icon" type="image/x-icon" />
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
</head>

<body class="d-flex flex-column events">
    <nav class="navbar navbar-expand-lg navbar-light py-0" style="background-color: purple;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <p class="has-text-black"><img src="https://pbs.twimg.com/profile_images/1045671258/e.jpg" alt="EventIt"
                        class="img-thumbnail mb-1" style="height: 40px;background-color: black;"></p>
            </a>
            <!-- Button trigger modal -->
            <% if(currentUser){%>
                <i data-bs-toggle="modal" data-bs-target="#exampleModal" class="fa fa-user-circle-o" id="profile"
                    style="font-size: 36px;color: black;"></i>
                <% } %>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <b class="modal-title is-size-3" id="exampleModalLabel">User : <%=
                                            currentUser.username||currentUser.displayName %>
                                    </b>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="card d-flex">
                                        <div>
                                            <% if(currentUser.photos){%>
                                                <img src="<%= currentUser.photos[0].value %> "
                                                    style="border-radius: 50%;height:200px;width: 200px;"
                                                    class="card-img-top" alt="...">
                                                <% } %>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title is-size-4">Profile</h5>
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                <b>Username:</b>
                                                <%= currentUser.username||currentUser.displayName %>
                                            </li>
                                            <li class="list-group-item d-flex align-items-center">
                                                <label for="form-label"><b>UserID:</b></label>
                                                <input type="text" class="form-control" id="myInput"
                                                    style="border: none;" value="<%= currentUser._id %> " required>
                                                <button class="btn" data-bs-toggle="tooltip" data-bs-placement="top"
                                                    title="Copy to Clipboard" onclick="copyid()"><svg
                                                        xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                        fill="currentColor" class="bi bi-clipboard" viewBox="0 0 16 16">
                                                        <path
                                                            d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z" />
                                                        <path
                                                            d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z" />
                                                    </svg></button>
                                            </li>
                                            <li class="list-group-item"><b>email:</b>
                                                <%= currentUser.email||currentUser.emails[0].value %>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <div class="navbar-nav">
                            <% if(currentUser){ %>
                                <a class="nav-link" href="/events"><button class="button"><span>All
                                            posts</span></button></a>
                                <a class="nav-link" href="/events/new"><button class="button"><span>Make a
                                            Post</span></button></a>
                                <a class="nav-link" href="/events/create"><button
                                        class="button"><span>Create-Event</span></button></a>
                                <a class="nav-link" href="/events/view"><button class="button"><span>View
                                            Events</span></button></a>
                                <% }%>
                        </div>
                        <div class=" navbar-nav ml-auto">
                            <% if(!currentUser){ %>
                                <a class="nav-link" href="/login"><button class="button"><span>Login</span></button></a>
                                <a class="nav-link" href="/register"><button
                                        class="button"><span>Sign-Up</span></button></a>
                                <% }else{ %>
                                    <a class="nav-link" href="/logout"><button
                                            class="button"><span>Logout</span></button></a>
                                    <% } %>
                        </div>

                    </div>
        </div>
    </nav>
    <div class="container-fluid p-0">
        <%- include("partials/flash") %>
            <div class="container mt-5">
                <div class="row">
                    <% for(let event of events){%>
                        <div class="card m-3 d-flex" style="width: 18rem;background-color: purple;">
                            <% if(event.images[0]){%>
                                <img src="<%= event.images[0].url %> " class="img-thumbnail mt-3" alt="...">
                                <% }else{ %>
                                    <img src="https://i.stack.imgur.com/y9DpT.jpg" class="img-thumbnail mt-3" alt="...">
                                    <% } %>
                                        <div class="card-body">
                                            <h5 class="card-title text-white">
                                                <%= event.name %>
                                            </h5>
                                            <p class="card-text text-black">
                                                <%= event.description %>
                                            </p>
                                            <a href="/events/create/<%= event._id %> "
                                                class="btn btn-secondary">Enter</a>
                                        </div>
                        </div>
                        <% } %>
                </div>
            </div>
    </div>
    <%- include("partials/footer") %>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
            crossorigin="anonymous"></script>
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
        <script src="/javascript/javascript.js"></script>
</body>

</html>