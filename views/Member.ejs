<% layout("boilerplate") %>
    <div class="offset-md-3 col-md-6 bg-white p-3 mt-5 mb-5">
        <div class="row">
            <h3 class="is-size-4">Member details</h3>
            <hr class="bg-dark">
            <form action="/events/create/<%=event._id%>/Member" method="POST" class="d-inline needs-validation"
                novalidate>
                <div class="mb-3">
                    <label for="college" class="form-label">College Name:</label>
                    <input type="text" class="form-control" name="college" id="college" autofocus required>
                </div>
                <div class="mb-3">
                    <label for="linkedin" class="form-label">Linkedin Profile:</label>
                    <input type="text" class="form-control" name="linkedin" id="linkedin" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email Id:</label>
                    <input type="email" class="form-control" name="email" id="email" required>
                </div>
                <div class="mb-5">
                    <label for="skills" class="form-label">Skills: (USE A COMMA TO SEPARATE DIFFERENT SKILLS:
                        Eg-designing,writing,etc..)</label>
                    <input type="text" class="form-control" name="skills" id="skills" required>
                </div>
                <div class="mb-5" style="margin-top: 40px;">
                    <select class="form-select" name="event" aria-label="Default select example">
                        <option selected>Join in:</option>
                        <% event.programmes.forEach((programme,i)=> {%>
                            <% if(event.programmes[i]) {%>
                                <option value="<%= programme %> ">
                                    <%=programme%>
                                </option>
                                <% } %>
                                    <% }); %>
                    </select>
                </div>
                <div class="mb-5 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
                    <label class="form-check-label" for="exampleCheck1">I agree that my inputs are true</label>
                </div>
                <button type="submit" class="d-inline btn btn-success">Submit</button>
            </form>
            <a class="mt-3" href="/events/create/<%= event._id %> "><button
                    class="d-inline btn btn-warning">Back</button></a>
        </div>
    </div>